{
  "$schema": "https://json.schemastore.org/base.json",
  "$description": "Generated by dsys — do not edit manually. Re-run dsys to regenerate.",
  "$comment": "The {light, dark} $value pattern for semantic color tokens is a project extension of DTCG. Running Style Dictionary v5 against this file requires a custom preprocessor to expand mode-aware values into mode-specific token sets. See https://styledictionary.com/reference/hooks/preprocessors/",
  "primitive": {
    "color": {
      "$type": "color",
      "green": {
        "400": { "$value": "#4ADE80", "$description": "Green 400 — light-mode inverted action, dark-mode primary action and feedback success" },
        "500": { "$value": "#22C55E", "$description": "Green 500 — feedback success (light mode)" }
      },
      "forest": {
        "800": { "$value": "#1F3A1F", "$description": "Forest 800 — primary brand green; CTA buttons, border focus, action primary (light)" },
        "900": { "$value": "#1A2B1A", "$description": "Forest 900 — primary text (light), surface raised (dark)" },
        "950": { "$value": "#0F1A0F", "$description": "Forest 950 — darkest surface background (dark mode default)" }
      },
      "sage": {
        "50":  { "$value": "#F7F9F4", "$description": "Sage 50 — default surface background (light mode)" },
        "100": { "$value": "#F0F4F0", "$description": "Sage 100 — inset surface (light), primary text (dark)" },
        "200": { "$value": "#E8EDE8", "$description": "Sage 200 — border default (light), action secondary (light)" },
        "400": { "$value": "#8A9A8A", "$description": "Sage 400 — muted text (light)" },
        "600": { "$value": "#6B7A6B", "$description": "Sage 600 — muted text (dark)" },
        "700": { "$value": "#526052", "$description": "Sage 700 — secondary text (light)" },
        "800": { "$value": "#3D4A3D", "$description": "Sage 800 — border default (dark)" },
        "900": { "$value": "#2A3D2A", "$description": "Sage 900 — action secondary (dark)" }
      },
      "pink": {
        "400": { "$value": "#F06292", "$description": "Pink 400 — feedback error (dark mode)" },
        "500": { "$value": "#E0446E", "$description": "Pink 500 — feedback error (light mode); vivid brand accent" }
      },
      "red": {
        "400": { "$value": "#F87171", "$description": "Red 400 — destructive action (dark mode)" },
        "500": { "$value": "#EF4444", "$description": "Red 500 — destructive action (light mode)" }
      },
      "amber": {
        "400": { "$value": "#FACC15", "$description": "Amber 400 — feedback warning (dark mode)" },
        "500": { "$value": "#F59E0B", "$description": "Amber 500 — feedback warning (light mode)" }
      },
      "white": { "$value": "#FFFFFF", "$description": "Pure white — raised surface (light), text inverse" }
    },
    "spacing": {
      "$type": "dimension",
      "1":  { "$value": "4px" },
      "2":  { "$value": "8px" },
      "3":  { "$value": "12px" },
      "4":  { "$value": "16px" },
      "5":  { "$value": "20px" },
      "6":  { "$value": "24px" },
      "8":  { "$value": "32px" },
      "10": { "$value": "40px" },
      "12": { "$value": "48px" },
      "16": { "$value": "64px" },
      "20": { "$value": "80px" },
      "24": { "$value": "96px" },
      "32": { "$value": "128px" }
    }
  },
  "semantic": {
    "color": {
      "$type": "color",
      "action": {
        "primary": {
          "$value": { "light": "#1F3A1F", "dark": "#4ADE80" },
          "$description": "Primary interactive elements: CTA buttons, selected states. Forest green light / bright green dark."
        },
        "secondary": {
          "$value": { "light": "#E8EDE8", "dark": "#2A3D2A" },
          "$description": "Secondary/ghost interactive elements. Light sage background light / deep green-gray dark."
        },
        "destructive": {
          "$value": { "light": "#EF4444", "dark": "#F87171" },
          "$description": "Danger actions: delete, remove, irreversible operations."
        }
      },
      "surface": {
        "default": {
          "$value": { "light": "#F7F9F4", "dark": "#0F1A0F" },
          "$description": "Default page/screen background. Warm off-white light / deep forest-black dark."
        },
        "raised": {
          "$value": { "light": "#FFFFFF", "dark": "#1A2B1A" },
          "$description": "Card and elevated surface, above default."
        },
        "overlay": {
          "$value": { "light": "#FFFFFF", "dark": "#1F2937" },
          "$description": "Modal/drawer background surface."
        },
        "inset": {
          "$value": { "light": "#F0F4F0", "dark": "#0A140A" },
          "$description": "Recessed surfaces (inputs, code blocks)."
        }
      },
      "text": {
        "primary": {
          "$value": { "light": "#1A2B1A", "dark": "#F0F4F0" },
          "$description": "Primary body text and headings."
        },
        "secondary": {
          "$value": { "light": "#526052", "dark": "#ADBAAD" },
          "$description": "Supporting text, midpoint between primary and muted."
        },
        "muted": {
          "$value": { "light": "#8A9A8A", "dark": "#6B7A6B" },
          "$description": "Disabled, placeholder, caption, and subdued label text."
        },
        "inverse": {
          "$value": "#FFFFFF",
          "$description": "Text on colored surfaces (e.g. white text on forest-green button)."
        },
        "link": {
          "$value": { "light": "#1F3A1F", "dark": "#4ADE80" },
          "$description": "Hyperlinks — uses primary action color."
        }
      },
      "border": {
        "default": {
          "$value": { "light": "#E8EDE8", "dark": "#3D4A3D" },
          "$description": "Standard borders and dividers."
        },
        "focus": {
          "$value": { "light": "#1F3A1F", "dark": "#4ADE80" },
          "$description": "Focus ring color for accessibility. Matches primary action color."
        }
      },
      "feedback": {
        "success": {
          "$value": { "light": "#22C55E", "dark": "#4ADE80" },
          "$description": "Success states and confirmations."
        },
        "error": {
          "$value": { "light": "#E0446E", "dark": "#F06292" },
          "$description": "Error and destructive feedback states. Vivid pink brand accent."
        },
        "warning": {
          "$value": { "light": "#F59E0B", "dark": "#FACC15" },
          "$description": "Warning states requiring attention."
        },
        "info": {
          "$value": { "light": "#1F3A1F", "dark": "#4ADE80" },
          "$description": "Informational states — uses brand action color (no blue in Luxora palette)."
        }
      }
    }
  }
}
